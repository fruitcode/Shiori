<Window x:Class="Shiori.BookmarksWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Shiori="clr-namespace:Shiori"
        Title="BookmarksWindow" Height="300" Width="300">
    <Window.Resources>
        <Shiori:DurationValueConverter x:Key="DurationValueConverter"/>
    </Window.Resources>
    
    <Grid>
        <ListView x:Name="BookmarksListBox" SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Time" Width="50" DisplayMemberBinding="{Binding Converter={StaticResource DurationValueConverter}}"/>
                    <GridViewColumn Header="Title" Width="215">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Path=Title}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
